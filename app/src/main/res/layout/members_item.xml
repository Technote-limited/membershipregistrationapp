<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:layout_anchorGravity="center_horizontal"
    android:id="@+id/card_view_member"
    android:background="@drawable/edit_text_border">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C7C3C3">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/member_profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/user"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:background="@drawable/edit_text_border"
                    android:textColorHint="#C0C0C0"

                    />
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="First Name : "
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_name"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_names"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Middle Name : "
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/middle_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_names"
                            />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_name_surname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Surname : "
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/surname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_name_surname"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="ID or Passport Number : "
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/id_passport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_id"
                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Phone Number : "
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_phone"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_member_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Member Number : "
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/member_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_member_number"
                            />

                    </RelativeLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Date of Birth : "
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_dob"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Gender : "
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_gender"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="6dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dip"
                    android:id="@+id/linear_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_county"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="County : "
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/memberCounty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_county"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_constituency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Constituency : "
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/constituency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_constituency"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/label_ward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Ward : "
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/ward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:background="@drawable/edit_text_border"
                            android:textColorHint="#C0C0C0"
                            android:layout_toRightOf="@id/label_ward"
                            />

                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#186918"
                android:text="Edit Details"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>